<SelectableUserButton>:
    size_hint_y: None
    height: dp(45)
    group: 'users'
    background_color: (0.3, 0.5, 0.8, 1) if self.state == 'down' else (0.6, 0.7, 0.9, 1)
    color: 0.2, 0.4, 0.8, 1
    font_size: '14sp'
    text_size: self.width - dp(20), None
    halign: 'left'
    valign: 'middle'
    padding: [10, 0]
    

