                # Odstƒôp przed przyciskiem powrotu
                Widget:
                    size_hint_y: None
                    height: "10sp"

        # Przycisk powrotu na dole
        Button:
            text: "üîô Powr√≥t"
            background_color: 0.7, 0.7, 0.7, 1
            font_size: "20sp"
            size_hint_y: None
            height: "50sp"
            on_press: app.root.current = "home"


