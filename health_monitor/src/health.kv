                    Button:
                        text: "üíæ Wykonaj backup"
                        background_color: 0.6, 0.7, 0.9, 1
                        font_size: "16sp"
                        on_press: root.backup()
                    
                    Button:
                        text: "üì• Przywr√≥ƒá backup"
